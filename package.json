{
  "description": "Boilerplate for setting up @fastify/vite with Typescript",
  "type": "module",
  "scripts": {
    "build": "npm run build:server && vite build",
    "build:server": "vue-tsc --build && tsc",
    "dev": "npm run build:server && node dist/server.js --dev",
    "lint": "eslint ./src/",
    "test": "vitest run",
    "test:type": "vitest --ui --typecheck",
    "start": "node dist/server.js",
    "migrate": "flyway -c db/flyway.cjs migrate",
    "db:migrate": "pnpm flyway -c db/flyway.cjs migrate",
    "db:clean": "pnpm flyway clean -c db/flyway.cjs",
    "db:recreate": "pnpm db:clean db:migrate"
  },
  "dependencies": {
    "@fastify/env": "^5.0.2",
    "@fastify/one-line-logger": "latest",
    "@fastify/vite": "8.0.0-alpha.2",
    "@fastify/vue": "1.0.0-alpha.5",
    "@pinia/testing": "^1.0.0",
    "@testing-library/vue": "^8.1.0",
    "dotenv": "^16.4.7",
    "fastify": "^5.2.1",
    "knex": "^3.1.0",
    "mysql2": "^3.14.3",
    "node-flywaydb": "^3.0.7",
    "pinia": "^2.3.1",
    "ts-node": "^10.9.2",
    "vue": "^3.5.13",
    "vue-router": "^4.5.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@types/node": "^20.14.11",
    "@typescript-eslint/eslint-plugin": "^8.23.0",
    "@typescript-eslint/parser": "^8.23.0",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vitest/browser": "^3.0.5",
    "@vitest/eslint-plugin": "^1.1.25",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "eslint": "^9.19.0",
    "eslint-plugin-vue": "^9.32.0",
    "globals": "^15.14.0",
    "jsdom": "^26.0.0",
    "playwright": "^1.50.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.23.0",
    "vite": "^6.1.0",
    "vite-plugin-vue-devtools": "^7.7.0",
    "vitest": "^3.0.2",
    "vitest-browser-vue": "^0.1.0",
    "vue-tsc": "^2.2.0"
  }
}
